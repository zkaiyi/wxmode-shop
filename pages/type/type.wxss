/* pages/type/type.wxss */
.search-section .zhanwei{
  height: 250rpx;
}
.header-c{
  position: fixed;
  left: 0; 
  right: 0;
  z-index: 100;
  height: 250rpx;
}
.header .search{
  display: flex;
  justify-content: space-between;
  margin: 10rpx auto 0;
  overflow: hidden;
  width: 700rpx;
  height: 70rpx;
  border-radius:20rpx;
  background: #f7f7f7;
	align-items: center;
}
.header input{
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}
.header icon{
  padding:0 10rpx 0 30rpx;
}

/* 左边 */
.nav{height: 68rpx;line-height: 68rpx;text-align: center;color: #000000;font-size: 30rpx;width: 90%;margin: auto;margin-top: 10rpx;}
.navs{width: 200rpx;height: 100%;min-height:calc(100vh - 108rpx);background-color: #fff;position: fixed;left: 0;border-right:1px solid #dcdcdc; }
.nav-active{color: #fff;background-color: #ff6f3f;border-radius: 10px;}


/* 右边分类详情 */
.content{height: 100%;min-height:calc(100vh - 108rpx);width:100%;}
.content-left{width: 200rpx;height: 100%;min-height:calc(100vh - 108rpx);background-color: #f5f5f5;}
.content-right{width: 500rpx;margin-left: 28rpx;}
.section{width:500rpx;height: 158rpx;background-color: #fff;margin-bottom: 28rpx;color: #4a4a4a;padding: 0 20rpx;border-radius: 5px;}
.product-img{width: 150rpx;height: 150rpx;margin-right: 20rpx;}
.product-name{font-size: 24rpx;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.product-price{font-size: 26rpx;font-weight: bold;}
.product-num{font-size: 22rpx;}
.product-desc{line-height: 36rpx;width: 320rpx;}
.section-top-img{width: 100%;height: 100%;}
.section-top-name{color: #333333;font-size: 32rpx;line-height: 70rpx;text-align: center;}
.section-top-name02{font-size: 25rpx;color: #999999;text-transform: uppercase;text-align: center;}
